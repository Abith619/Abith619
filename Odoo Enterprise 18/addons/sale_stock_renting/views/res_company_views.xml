<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_company_view_form" model="ir.ui.view">
        <field name="name">res.company.form.inherit.sale.stock.renting</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/field[@name='currency_id']" position="after">
                <field name="rental_loc_id" groups="base.group_no_one"/>
            </xpath>
        </field>
    </record>

</odoo>
