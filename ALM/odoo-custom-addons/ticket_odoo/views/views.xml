<odoo>
  <data>
    <!-- ### Membuat Tampilan Tree/List ### -->
     
    <record model="ir.ui.view" id="ticket_tree_view">
        <field name="name">ticket.ticket.tree</field>
        <field name="model">ticket.ticket</field>
        <field name="arch" type="xml">
            <tree string="Ticket List">
                <field name="name"/>
                <field name="reporter_id" string="Reporter"/>  
                <field name="names"/>
                <field name="description"/>    
                 <field name="date" string="Date"/>
                  <field name="state"/>
            </tree>
        </field>
    </record>
     
     
    <!-- ### Membuat Tampilan Form ### -->
     
    <record model="ir.ui.view" id="ticket_form_view">
        <field name="name">ticket.ticket.form</field>
        <field name="model">ticket.ticket</field>
        <field name="arch" type="xml">
            <form string="Ticket Form">
               <header>
                    <button name="action_start" state="yet" string="In progress" type="object" class="oe_highlight o_expense_sheet_submit" attrs="{'invisible': [('state', 'in',['started','done'])]}" groups="ticket_odoo.group_ticket_manager"/>
                    <button name="action_complete" state="started" string="complete" type="object" class="oe_highlight o_expense_sheet_submit" attrs="{'invisible': [('state', 'in',['yet','done'])]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="yet,started,done"/>
                </header>

                <sheet>
                <div class="oe_title">
                     <h1>
                     <field name="names" readonly="1"/>
                     </h1>
                     </div>

                    <group>
                        <group>
                            <field name="name" placeholder="What's your problem?"/>
                            <field name="reported_id" placeholder="Choose the employee you have a problem with." options="{'no_create': True, 'no_create_edit':True, 'no_open': True,}" groups="ticket_odoo.group_ticket_manager"/>
                            <field name="reporter_id"  options="{'no_open': True}"/>
                        </group>
                        <group>
                            <field name="date" placeholder="Date of the problem occurred"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Your Problem">
                            <field name="description" placeholder="Describe your problem"/>
                        </page>
                    </notebook>
                </sheet>
                 <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" string="mail"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" string= "Mail"/>
                </div>

            </form>
        </field>
    </record>
     
     
    <!-- ### Membuat Action/Event Object Ticket ### -->
     
    <record model="ir.actions.act_window" id="ticket_list_action">
        <field name="name">Service Ticket</field>
        <field name="res_model">ticket.ticket</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new ticket
              </p><p>
                Make your report about the unpleasant behavior of your co-workers.
                The report you provide will not be disseminated but evaluated by managers and HR.
              </p>
        </field>
    </record>
     
     
    <!-- ### Membuat Menu Bar ### -->

    <menuitem id="main_ticket_odoo_menu" name="Service Ticket" web_icon="ticket_odoo,static/description/icon.png"/>/>

    <!-- ### Membuat Menu Title ### -->

    <menuitem id="ticket_odoo_menu" name="Ticket" parent="main_ticket_odoo_menu" action="ticket_list_action"/>
      
  </data>
</odoo>