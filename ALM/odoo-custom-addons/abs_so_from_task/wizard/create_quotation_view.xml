<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- This view is inherited from "view_create_quotation_form" and display Project, Assigned To and Deadline -->
    <record id="view_create_quotation_form" model="ir.ui.view">
	<field name="name">task.create.quotation.form</field>
	<field name="model">task.create.quotation</field>
	<field name="arch" type="xml">
	    <form>
		<group>
		   <field name="task_order_date"></field>
		   <field name="sale_order_products_ids" widget="many2many_tags" />
		</group>
		<footer>
		   <button name="create_quotation" string="Create Quotation" type="object" class = "btn-primary" />
		   <button string="Cancel" class="btn-default" special="Cancel" />
		</footer>
	    </form>
	</field>		
    </record>
</odoo>

