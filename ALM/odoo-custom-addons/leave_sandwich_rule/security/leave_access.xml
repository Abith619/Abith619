<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record model="ir.module.category" id="module_category_leaves">
            <field name="name">office leaves</field>
            <field name="description">leaves for employee and admin</field>
        </record>

        <record id="group_office_admin" model="res.groups">
            <field name="name">Admin leaves</field>
            <field name="category_id" ref="module_category_leaves"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_office_user" model="res.groups">
            <field name="name">Employee leaves</field>
            <field name="category_id" ref="module_category_leaves"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <!-- <field name="unauth" position="attributes">
                <attribute name="invisible">True</attribute>
            </field>  -->
        </record>
</odoo>
