<odoo>
    <record id="view_task_entry" model="ir.ui.view">
        <field name="name">task.entry</field>
        <field name="model">task.entry</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <group>
                        <field name="duration" widget="float_time"/>
                        <field name="description"/>
                    </group>
                </group>
                <footer>
                    <button string="Save Entry" class="btn-default" type="object" name="save_entry"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>