<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

         <record model="ir.module.category" id="module_category_resignation">
        <field name="name">Resignation Management</field>
        <field name="description"> Resignation of the employee </field>
    </record>

    <record id="group_resign_admin" model="res.groups">
        <field name="name">Admin</field>
        <field name="resi_id" eval="[(4, ref('base.group_user'))]"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="category_id" ref="module_category_resignation"/>
    </record>
    
    <record id="hr_resignation_admin_rule" model="ir.rule">
        <field name="name">admin resign</field>
        <field ref="hr_resignation.model_hr_resignation" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="admin" eval="[(4, ref('base.group_user'))]"/>
    </record>
        <record id="hr_resignation_personal_rule" model="ir.rule">
            <field name="name">Employee Resignation</field>
            <field ref="hr_resignation.model_hr_resignation" name="model_id"/>
            <field name="domain_force">['|',('employee_id.user_id','=',user.id),('employee_id.user_id','=',False)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>
