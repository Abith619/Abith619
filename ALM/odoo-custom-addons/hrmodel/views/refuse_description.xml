<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="refuse_description_form" model="ir.ui.view">
        <field name="name">refuse_description.wizard.name</field>
        <field name="model">refuse.description</field>
        <field name="arch" type="xml">
			<form string="My Form">
				<sheet>		                	
					<group>
						<field name="refuse_description_field"/>
					</group>
				</sheet>
				<footer>
					<button name="addedr" type="object" string="SAVE" class="oe_highlight"/>
					<button special="cancel" string="Cancel"  name="cancel" />
				</footer>
			</form>
		</field>
	</record>             

<record id="refuse_description_wizard"  model="ir.actions.act_window">
	<field name="name">refuse description</field>
	<field name="type">ir.actions.act_window</field>		
	<field name="res_model">refuse.description</field>
	<field name="view_mode">form</field>
	<field name="view_id" ref="refuse_description_form"/>
	<field name="target">new</field>
</record>
</odoo>
