<odoo>
  <data>
<record model="ir.ui.view" id="view_form_task_extend">
      <field name="name">Task Inherit</field>
      <field name="model">project.task</field>
      <field name="inherit_id" ref="project.view_task_form2"/>
      <field name="arch" type="xml">
       <xpath expr="//field[@name='user_id']" position="after">
          <field name ="assigned_by"/>
          <!-- <field name ="task_type"/> -->
          
          </xpath> 
         
          <xpath expr="//field[@name='assigned_by']" position="after">
<!-- 
           <field name ="task_challenge" string='Task Challenge'/>
           
           <field name ="hourly_rate" />
           <field name ="points_per_hours" string='Points Per Hour'/> -->
            <field name ="total_points" string='Total points'/>

           <!-- <field name ="repeat_every" /> -->
                      <!-- <field name ="related" /> -->
                                 <!-- <field name ="notdetectpoints" /> -->
          
          </xpath>

            <notebook position="inside">
              <page string="Task Duration" name="Task Duration">
          <group>
          <group>
         
           <field name ="task_type"/>
           <field name ="task_challenge"/> 
            <field name ="total_task"/>
            <field name ="total_duration"/>
            <!-- <field name ="allocated_hours"/>  -->
             </group>
             </group>
          </page>

          <page string="Task Points" name="Task Points">
          <group>
          <group>
            <!-- <field name ="bonus"/> -->
            <field name ="points_per_hours"/>
             <field name ="project_points"/>
              <field name ="project_duration"/>
               <field name ="total_duration" invisible='1'/>
                <field name ="total_task" />
             </group>
             </group>
           </page>

         
          </notebook>

          <!-- <xpath expr="//field[@name='hourly_rate']" position="after">
          <field name ="bonus" string='Bonus Point'/>
           <field name ="allocated_hours" string='Allocated Hours'/>
         </xpath> -->
 </field>
    </record>

    <record model="ir.ui.view" id="view_tree_task_extend">
      <field name="name">Task Inherit</field>
      <field name="model">project.task</field>
      <field name="inherit_id" ref="project.view_task_tree2"/>
      <field name="arch" type="xml">
     
      <xpath expr="//field[@name='project_id']" position="after">

          <field name ="date_start"/>
           <field name ="task_type"/>
          
          </xpath>

       <!-- <xpath expr="//field[@name='date_start']" position="after">

          <field name ="task_type"/>
          
          </xpath> -->

         
        
         <xpath expr="//field[@name='planned_hours']" position="replace">

          <field name ="planned_hours" string = 'Allocated hours' />
          
        </xpath>
        
   
        <xpath expr="//field[@name='remaining_hours']" position="replace">

           <field name ="effective_hours" string ='Total Logged Time' invisible="1"/>

             <field name ="total_points" sum="total of Points" string ='Total Score' />
          
          </xpath>
        
        <xpath expr="//field[@name='progress']" position="replace" invisible="1"> 

          </xpath>


          </field>
    </record>

  </data>
  </odoo>
