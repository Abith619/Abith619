
<odoo>
  <data>
<record model="ir.ui.view" id="crm_case_form_view_jobs">
    <field name="name">JobsRecruitment Form</field>
    <field name="model">hr.applicant</field>
    
    <field name="inherit_id" ref="hr_recruitment.crm_case_form_view_job"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='attachment_number']" position="after">
          
            <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="get_vehicles"
                        icon="fa-pencil-square-o">
                        <field string="AfterInterview" name="vehicle_count" widget="statinfo"/>
                    </button>
                </div>
                     <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="get_vehicless"
                        icon="fa-pencil-square-o">
                        <field string="HR Report" name="vehicle_counts" widget="statinfo"/>
                    </button>
                </div>
                           <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="get_vehiclessss"
                        icon="fa-pencil-square-o">
                        <field string="ShortList" name="vehicle_countss" widget="statinfo"/>
                    </button>
                </div>
        </xpath>
            
               <xpath expr="//field[@name='user_id']" position="before">
          
       <field name="stagesss"/>
         
        </xpath>
    
    
     
    </field>
</record>
</data>
</odoo>
