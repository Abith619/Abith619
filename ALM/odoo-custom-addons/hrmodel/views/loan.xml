<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="view_bank_inherit" model="ir.ui.view">
            <field name="name">hr.loan.inherit</field>
            <field name="model">hr.loan</field>
            <field name="inherit_id" ref="ohrms_loan.hr_loan_form_view"/>
            <field name="arch" type="xml">
           
                <xpath expr="//field[@name='loan_lines']/tree//field[@name='date']" position="after">
                    <field name="paid_due_amount" />
                </xpath>   
                <xpath expr="//field[@name='installment']" position="after">
                    <field name="Finished" />
                </xpath>
    </field>
    </record>
    </data>
    

</odoo>
