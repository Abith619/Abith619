<odoo>
  <data>

 <record id="leaves_model_inherit" model="ir.ui.view">
        <field name="name">hr.leave.inherit</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form_manager"/>
        <field name="arch" type="xml">


            <xpath expr="//field[@name='payslip_status']" position="after">
                <field name="note_ids"/>
            </xpath>

            <xpath expr="//field[@name='name']" position="after">
                <field name="approve_note"/>
            </xpath>
            
 <xpath expr="/form/*" position="before">
                    <header>
                    <button name="send" string="Send by Mail" type="object" invisible = "1"/>
                    </header>
                </xpath>


        </field>
    </record>

</data>
</odoo>
