<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>


  <!--form view of the brand menu-->
<record model="ir.ui.view" id="studentssshort_view">
            <field name="name">hrshort_form</field>
            <field name="model">hrshort.hrshort</field>
            <field name="arch" type="xml">
                <form string="hrshort">
                   <sheet>
                     
            
                <group><field name="names">names</field> </group>
                                 <group>
        	 <group string="HR Inputs To Department Head And Managements Feedback"></group>
</group>
 
   <group><field name="name">name</field> </group>
    <group><field name="rec">rec</field> </group>
       <group><field name="jus">jus</field> </group>

                                 <group>
        	 <group string="Department Head"></group>
</group>
     <group><field name="feedback">feedback</field> </group>

                                 <group>
        	 <group string="Management"></group>
</group>
     <group><field name="managementfeed">managementfeed</field> </group>
     
                                 <group>
        	 <group string="Finalised Details (After Department Head And Managements)"></group>
</group>
     <group><field name="finalfeed">finalfeed</field> </group>

</sheet>
 </form>
  </field>
</record>

  <record id="hrshort_status_tree_view" model="ir.ui.view">
            <field name="name">HR ShortList</field>
            <field name="model">hrshort.hrshort</field>
            <field name="arch" type="xml">
                <tree>
               <!--<field name="name"/>-->
                    <field name="names"/>
                                  <field name="name"/>
                                   <field name="managementfeed"/>
                    
                
                </tree>
            </field>
        </record>



		<!--action for brand-->
		 <record id="hrshort_menu_action" model="ir.actions.act_window">
        	<field name="name">HR During ShortList/Finalisation</field>
        	<field name="res_model">hrshort.hrshort</field>

        	<field name="view_mode">tree,form,kanban</field>
             <field name="context" eval="{'search_default_male': 1}"/>
        	<field name="domain">[]</field>
        	<field name="help" type="html">
            	<p class="oe_view_nocontent_create">Create The First Model
            	</p>
        	</field>

    </record>


      
	</data>
</odoo>

