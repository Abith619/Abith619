<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="view_form_project_extend">
      <field name="name">Project Inherit</field>
      <field name="model">project.project</field>
      <field name="inherit_id" ref="project.edit_project"/>
      <field name="arch" type="xml">
     

          <xpath expr="//field[@name='partner_id']" position="after">
 <!-- <field name ="pstatus"/>
  <field name ="ptype"/>
  <field name ="challenge"/> -->
          <field name ="work_order"/>
       
          <!-- <field name ="total_rate"/> -->
          
          </xpath>
 <!-- <xpath expr="//field[@name='total_rate']" position="after">
           <field name ="estimated_hours"/>
        
          </xpath>
         

          <xpath expr="//field[@name='estimated_hours']" position="after">
           <field name ="points_per_hour"/>
           
           
             
        
          </xpath>
          <xpath expr="//field[@name='points_per_hour']" position="after">

           <field name ="total_points"/>
          
          </xpath> -->

      <xpath expr="//field[@name='subtask_project_id']" position="after">

          <field name="description" widget="html"/>
          
          </xpath>
          
          <notebook position="inside">
          <page string="Project Team" name="Project Team">
          <group>
          <group>
           <field name ="projectcoordinator"/>  
            <field name ="businessanalyst"/>
             <field name ="projectleader"/>
             <field name ="projectdeveloper" widget="many2many_tags" />
             <field name ="tester" />
             </group>
             </group> 
          </page>

           <page string="Project Type " name="Project Team">
          <group>
          <group>
           <field name ="pstatus"/>  
            <field name ="ptype"/>
             <field name ="challenge"/>
             <!-- <field name ="projectdeveloper" />
             <field name ="tester" /> -->
             </group>
             </group>
          </page>

           <page string="Project Duration" name="Project Duration">
          <group>
          <group>
          <field name ="date_start"/> 
          <field name ="date"/> 
           <field name ="estimated_hours"/>    
            <field name ="alocatedduration"/>
             <field name ="remaininghrs"/> 

             <!-- <field name ="projectdeveloper" />
             <field name ="tester" /> -->
             </group>
             </group>
          </page>
          </notebook>

          
          

      </field>
    </record>

    <record model="ir.ui.view" id="view_tree_project_extend">
      <field name="name">Project Inherit</field>
      <field name="model">project.project</field>
      <field name="inherit_id" ref="project.view_project"/>
      <field name="arch" type="xml">
       <xpath expr="//field[@name='partner_id']" position="after">

              <field name ="date_start" string='Start Date'/>

          </xpath>

           <xpath expr="//field[@name='date_start']" position="after">

              <field name ="date" string='Expiration Date'/>

          </xpath>
        

          <xpath expr="//field[@name='date']" position="after">

          
          <field name ="estimated_hours"/>
          
          </xpath>

      </field>
    </record>

  


  </data>
</odoo>
