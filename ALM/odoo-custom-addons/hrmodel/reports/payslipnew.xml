<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
<template id="payslip_inherit" inherit_id="hr_payroll.report_payslip">
<xpath expr="//div[@class='page']" position="replace">

 <!--<h2> Pay Slip</h2>-->
                   <p class="text-center" style="font-size:15px"><span t-field="o.name"/></p>

                    <table class="table table-sm table-bordered">
                    <tr style="height:40px">
                            <td><strong>Employee Code</strong></td>
                            <td><span t-field="o.Employeecodes"/></td>
                            <td><strong>Employee Name</strong></td>
                            <td><span t-field="o.employee_id"/></td>
                        </tr>

                       
                        <tr style="height:40px">
                            <td><strong>Designation</strong></td>
                            <td><span t-field="o.employee_id.job_id"/></td>
                            <td><strong>Department Name</strong></td>
                            <td><span t-field="o.employee_id.department_id"/></td>
                         
                        </tr>
                         <tr style="height:40px">
                            <td><strong>No of Days In Month</strong></td>
                            <td><span t-field="o.no_of_days_month"/></td>
                            <td><strong>No of Days Present</strong></td>
                           <td><span t-field="o.noofdayspresent"/></td>
                            <!-- <td><span t-field="o.worked_days_line_ids.number_of_days"/></td> -->
                        </tr>
                       

                         <tr style="height:40px">
                            <td><strong>Leave Availed</strong></td>
                            <td><span t-field="o.leaveavail"/></td>
                            <td><strong>LOP</strong></td>
                            <td><span t-field="o.lop"/></td>
                        </tr>


                         


                        <tr style="height:40px">
                            <td><strong>Bank Name</strong></td>
                            <td><span t-field="o.employee_id.bank_account_id.bank_id"/></td>
                            <td><strong>Bank Account</strong></td>
                            <td><span t-field="o.employee_id.bank_account_id"/></td>
                        </tr>

                         <tr style="height:40px">
                            <td><strong>Branch Name</strong></td>
                            <td><span t-field="o.employee_id.bank_account_id.branch_name"/></td>
                            <td><strong>Date of Joining</strong></td>
                            <td><span t-field="o.dateofjoin"/></td>
                            
                        </tr>

                            
                             <tr style="height:40px">
                                <td><strong>Earned Leave </strong></td>
                                <td><span t-field="o.leave_earned"/></td>
                                <td><strong>Reamining Leave</strong></td>
                                <td><span t-field="o.reamining_leave"/></td>
                            </tr>


                        
                    </table>

<table width="100%" style ="border:none;">
<tr>
<td style ="border:none;">
<table class="table table-sm" style="table-layout: fixed">
                        <thead>
                            <tr>
                             <th class="text-center">Earnings</th>
                             <th class="text-center">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                        <tr t-foreach="o.line_ids.filtered(lambda line: line.appears_on_payslip)" t-as="line">
                             <td><span t-field="line.name"/></td>
                             <td class="text-right"><span t-field="line.total"/></td>
                        </tr>
</tbody>
                    </table>

</td>
<td style ="border:none">
<table class="table table-sm" style="table-layout: fixed">
                        <thead>
                            <tr>
                              
                                <th class="text-center">Deduction</th>
                            
                                <th class="text-right">Amount</th>
                              

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                             
                                <td><span t-field="o.deductions"/></td>
                            
                                <td class="text-right"><span t-field="o.deduction_amount" /></td>
                            </tr>
                            <tr> 
                                <t t-if="o.eb_deduction">
                                    <td><span >	EB and Motor Charge </span></td>
                            
                                    <td class="text-right"><span t-field="o.eb_deduction" /></td>

                                </t>
                            </tr>

                            <tr>
                                <t t-if="o.salary_advances">
                                    <td><span >	Salary Advance </span></td>
                            
                                    <td class="text-right"><span t-field="o.salary_advances"/></td>

                                </t> 
                            <tr>
                                <t t-if="o.loan_deduction">
                                    <td><span >	Loan Deduction </span></td>
                            
                                    <td class="text-right"><span t-field="o.loan_deduction" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></td>

                                </t>

                            </tr>

                            </tr> 
                        </tbody>
                    </table>

</td>
</tr>

<tr>
    <td style ="border:none">
    <table class="table table-sm" style="table-layout: fixed">
   <thead>
                            <tr>
                       
                            <th class="text-left">Total Earnings</th>
                             <th class="text-right"><span t-field="o.gross_earnings" t-options='{"widget": "float", "precision": 2}'/></th>
                             
                              </tr>
                        </thead>
                         <tbody>
                                <tr>
                             
                                <td colspan ="2">&#160;</td>
                             </tr>
                         </tbody>                 
                              </table>

</td>
    <td style ="border:none">
    <table class="table table-sm" style="table-layout: fixed">
                       
                             <thead>
                            <tr>
                              
                                <th class="text-left">Total Deductions</th>
                                <!-- <t t-set="qty" t-value="qty + o.deduction_amount+ o.eb_deduction+ o.salary_advances"/> -->

                                <th class="text-right"><span t-field="o.total_deductions" t-options='{"widget": "float", "precision": 2}'/></th>

                            
                               
                            </tr>
                         
                            </thead>

                             <tbody>
                                <tr>
                                <td class="text-right"><strong>Net Pay</strong></td>
                                <td class="text-right"><strong><span t-field="o.amount_total" t-options='{"widget": "float", "precision": 2}'/></strong></td>
                            
</tr>
</tbody> 
</table>

</td>
</tr>
</table>
       
<p class="text-center" style="font-size:15px"><strong>Amount (In words) : </strong><span t-field="o.num_word"/></p>
<br></br>
<br></br>
<br></br>
<!-- <p class="text-center" style="font-size:15px"><strong>This document is 'computer generated' and, hence, does not require any signature</strong></p> -->
<xpath expr="//div[@class='text-right']" position="replace">
    <div class="footer">
        <pre><strong>-----------------------------------------------------------------------------------------------------------------------------------------------</strong></pre>
       <pre><strong><p class="text-center" style="font-size:15px"><strong>This document is 'computer generated' and, hence, does not require any signature</strong></p></strong></pre>
    </div>
</xpath>

</xpath>

</template>
</data>
</odoo>
