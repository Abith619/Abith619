<data inherit_id="website.layout" name="Custom Header">
    <xpath expr="//header" position="replace">
        <style>
          .bi-heart{
            margin-top: -20%;
          }
          .shop-row{
            margin-bottom: -1%;
          }
          a:hover {
            text-decoration: none !important;
          }
          .medium{
            display: none !important;
          }
          .dropdown-item.active, .dropdown-item:active {
            background-color: transparent;
          }
          .btn-head.show{
            background-color: transparent !important;
            border-color: transparent !important;
          }
          .btn-head:hover{
            background-color: transparent !important;
            border-color: transparent !important;
          }
          .search-button{
            background-color: #0098ED !important;
          }
          .js_language_selector:hover{
            color: white !important;
          }
        .custom_user_menu_toggle{
          position:relative !important;
        }
        .custom_user_menu_toggle.dropdown-toggle::after {
          color: transparent!important;
        }
		    .custom-nav-link{
          display: flex;
          flex-direction: column;
          align-items: center;
		    }
        .fa, .fas {
          font-weight: 100 !important;
        }
          .btn-fill-light, .btn-light {
            color: #212529 !important;
            background-color: transparent;
            border-color: transparent;
          }
          .o_frontend_to_backend_nav .o_frontend_to_backend_buttons &gt; a {
            color: #FFFFFF !important;
          }
          
          header .btn-head{
            background-color: transparent !important;
            color: white !important;
          }
  		  . o_no_autohide_item{
  		    display: block !important;
  		  }
  		  .s_mega_menu_multi_menus .o_grid_mode p {
  	          font-weight: bold !important;
  		  }
          border-color: none !important;
        }
  		  .o_grid_mode{
  		    grid-template-columns: min-content !important;
  		  }
  		  li{
  		    display: contents !important;
  		  }
  		  .border-rightside{
  		    border-right: 1px solid #E1E1E1;
  		  }
  		  
  		  .input-group {
  			  width: auto !important;
  		  }
  		  header .navbar-brand.logo img {
  			  object-fit: contain !important;
  			  display: block;
  			  width: max-content !important;
  			  height: 8.75rem;
  		  }
  		  
  		  .title-alignment{
  						display: flex;
  						align-items: center;
  						justify-content: space-between;
  		  }
  		  .margin{
  						margin-top: auto !important;
  						margin-bottom: auto !important;
  						align-items: center !important;
  						height: 5vh;
  					}
  					.side-margin{
  					  margin-right: auto !important;
  						margin-left: auto !important;
  					}
  					h6{
  						font-size: 1rem !important;
        			color: #520052;
        			font-weight: 500;
        			margin: 0;
        					}
  					.search-alignment{
  					  display: flex;
        			flex-direction: column;
        			align-items: normal;
  					}
  					.o_dropdown_menu{
  						background-color: #FFFFFF ;
  		  }
  			.search-button{
  			  border-top-right-radius: 1rem !important;
  	      border-bottom-right-radius: 1rem !important;
  			  border-top-left-radius: 0 !important;
    			border-bottom-left-radius: 0 !important;
    			background-color: #0098ED !important;
    			border: 0;
  			}
  			.search-bar{
  			  border-top-left-radius: 1rem !important;
  			  border-bottom-left-radius: 1rem !important;
  			  background-color: #F3F3F3 !important;
  			  border: 0 !important;
  			}
				@media (max-width: 3000px) {
				  .lg-screen{
				    display: block !important;
				  } 
				  .mobile-screen {
            display: none !important;
          }
          .custom-wish{
            margin-top: -6% !important;
          }
				}
				
				@media (max-width: 768px) {
          .mobile-screen {
            display: block !important;
          }
          .lg-screen{
				    display: none !important;
				  }
				  .custom-wish{
            margin-top: 3px !important;
          }
		  /*********************************************/
		  header.mobile-screen .row.justify-content-between{
		        width:100% !important;
		        --gutter-x: 0px !important;
		        display: flex;
		  }
		  /*********************************************/
        }
        
        @media (max-width: 576px) {
				/******************************/
				    
					.newsletter-section-1{
						margin-bottom: 10% !important;
					}
					.centered-section-1{
						margin-left: 15% !important;
						bottom: -8% !important;
					}
					.centered-section-2{
						font-size: 20px !important;
						text-align: left !important;
					}
					.centered-section-3{
						font-size: 15px !important;
					}
					.fa-icon-3{
						font-size: 14px !important;
					}
					.fluid-container.footer-1 span{
						font-size: 14px !important;
					}
					.d-flex.align-items-start{
						min-height: 16vh !important;
						margin-top: -15% !important;
					}
					.content-bx-1{
						height: 80% !important;
					}
					.container-fluid.popular-content h5.popular-text-font{
						margin-bottom: unset !important;
						margin-top: unset!important;
					}
					.container-fluid.popular-content .popular.position-relative.d-block.img-fluid.figure-img{
						height: 15vh !important;
					}
					.shop-by-brand-web{
						display:none !important;
					}
					.shop-by-brand-mobile{
						display:flex !important;
					}
					.s_blog_posts_post .card{
						background-color: unset !important;
						align-items: center !important;
					}
					.s_blog_posts_post a.s_blog_posts_post_cover{
						width: 70% !important;
						height: 150px !important;
					}
					div#o_my_sidebar.o_my_sidebar{
                        width:100% !important;
                    }
                    .signcenter .signup {
                        width: 60%;
                    }
                    .o_wsale_my_wish.d-none.nav-item{
                        display:inline !important;
                        width: auto !important;
                    }
                    .o_payment_form .btn.btn-primary {
                        height: 40px !important;
                        font-size: 15px !important;
                        width: 46% !important;
                     }
                   .o_payment_form .float-end.mt-2 {
                       width: 100% !important;
                   }
                   .o_payment_form .btn.btn-secondary {
                      background-color: #520052 !important;
                        border: 1px solid #520052 !important;
                        border-radius: 30px !important;
                   }
                    
				/******************************/
			}
			
			a.js_subscribe_btn.o_submit.btn.btn-custom.d-none{
					    display:inline !important;
			}
			a.js_subscribed_btn.o_submit.btn.btn-custom{
			    display:none !important;
			}
			.o_payment_form .btn.btn-secondary{
			    background-color: #520052 !important;
			}
			#delivery_carrier h3.mb24{
			    padding-left:2%;
			    font-size: 25px;
                margin-top: 20px;
                color: #520052;
			}
			#delivery_method .text-bg-secondary{
			    background-color: #520052 !important;
			}
			#delivery_2063, #delivery_2064{
			    margin-top: 30px;
			}
			#payment_method button[name="o_payment_submit_button"] {
			    font-size: 17px !important;
                height: 42px !important;
                width: 205px !important;
			}
			
</style>
        <header t-attf-class="mobile-screen">
          <t t-call="website_sale.custom_hamburger_menu_head"/>
        </header>
        <header id="top" style="border-bottom: 1px #E1E1E1;" t-attf-class="o_hidden-md-up o_top_fixed_element lg-screen">
            <div style="background-color: #F3F3F3;" class="">
              <div class="container" style="padding: 0px;">
                    <div class="row margin">
                        <div class="col-3 title-alignment" style="justify-content: flex-start !important;">
                                <h6>
                  								<a href="https://dashboard.webwinkelkeur.nl/webshops/reviews/1203670?lang=nld&amp;">Ratings&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;</a>
                  							</h6>
                                <i class="fa fa-star" role="img" style="color: #FFC20E;"/>
                                <i class="fa fa-star" role="img" style="color: #FFC20E;"/>
                                <i class="fa fa-star" role="img" style="color: #FFC20E;"/>
                                <i class="fa fa-star" role="img" style="color: #FFC20E;"/>
                                <i class="fa fa-star" role="img" style="color: #FFC20E;"/>
                        </div>
                        <div class="col-6" style="text-align: center;">
                            <h6>
                							Belgium's top online toy store for Kids !
                						</h6>
                        </div>
                        <div class="col-2" style="text-align: left;">
                                <a href="#">
                                    <h6>
                      								+32 (0)11 397 398
                      							</h6>
                                </a>
                              </div>
                          <div class="col-1">
                                <a href="/helpdesk" data-bs-original-title="" title="">
                                    <h6>
                      								Helpdesk
                      							</h6>
                                </a>
                              </div>
                      </div>
                </div>
            </div>
            <div style="background-color: #520052; ">
                <div class="container" style="padding: 0px;">
                    <div class="row margin">
                        <div class="col-3 title-alignment" style="justify-content: flex-start !important;">
                            
                                <a href="/comingsoon" data-bs-original-title="" title="">
                                    <h6 style="color: #FFFFFF !important;">
                    									Gift Card
                    								</h6>
                                </a>
                            
                            <span class="side-margin">
                                <a href="/blog" data-bs-original-title="" title="">
                                    <h6 style="color: #FFFFFF !important;">
                    									Blogs
                    								</h6>
                                </a>
                            </span>
                            <span style="margin-right: auto;">
                                <a href="/comingsoon" data-bs-original-title="" title="" aria-describedby="popover625189">
                                    <h6 style="color: #FFFFFF !important;">
                    									Freebies
                    								</h6>
                                </a>
                            </span>
                        </div>
                        <div class="col-6 title-alignment"/>
                        <div class="col-2 " style="display: flex; align-items: center;">
                            <span>
                              <t t-call="website_sale.pricelist_list">
                                <t t-set="website_sale_pricelists" t-value="website.get_pricelist_available(show_visible=True)"/>
                                <t t-set="hasPricelistDropdown" t-value="website_sale_pricelists and len(website_sale_pricelists)&gt;1"/>
                                <t t-set="_classes" t-valuef="d-none d-lg-inline "/>
                                </t>
                            </span>
                          
                          <span style="margin-left: auto !important; margin-right: auto !important;">
                            <t t-set="active_lang" t-value="list(filter(lambda lg : lg[0] == lang, languages))[0]"/>
                            <t t-set="language_selector_visible" t-value="len(languages) &gt; 1"/>
                            <t id="header_language_selector_call" t-call="website.language_selector">
                                <t t-set="_div_classes" t-value="(_div_classes or '') + ' dropdown'"/>
                                <t t-set="no_text" t-value="False"/>
                              <t t-set="flags" t-value="False"/>
                              <t t-call="website.language_selector_add_language">
                                <t t-set="dropdown" t-value="False"/>
                            </t>
                            </t>
                          </span>
                        </div>
                      <div class="col-1 " style="text-align: left; text-wrap: nowrap;">
                            <span>
                                <a href="/my/orders">
                                    <h6 style="color: #FFFFFF !important;">
                    									Track Orders
                    								</h6>
                                </a>
                            </span>
                          </div>
                    </div>
                </div>
            </div>
            <div style="height: auto !important; background-color: #FFFFFF; border-bottom: 1px solid #E1E1E1;">
                <div class="container" style="padding: 0px;">
                    <div class="row">
                      <div class="col-2">
                        <a href="/" class="navbar-brand logo title-alignment">
                          <img t-att-src="'data:image/png;base64,%s' % res_company.logo.decode('utf-8')" alt="Company Logo" class="img-fluid img o_we_custom_image ms-auto float-end" data-resize-width="1920" data-quality="100" loading="lazy" style="overflow: visible !important; object-fit: cover !important;"/>
                        </a>
                      </div>
                          <div class="col-10 h-auto" style="display: flex; flex-direction: column; padding: 0; justify-content: space-evenly;">
                        <div class="row shop-row" style="">
                          <div class="col-9">
                          <form method="get" data-snippet="s_searchbar_input" class="o_searchbar_form o_wait_lazy_js s_searchbar_input" action="/website/search" data-name="Search" style="padding: 0;margin-left: 10%;margin-right: 6%;">
                            <div role="search" class="input-group " style="margin-left:20%;margin-right:20%">
                                <input type="search" name="search" class="search-bar search-query form-control oe_search_box None" placeholder="Search..." data-search-type="all" data-limit="5" data-display-image="true" data-display-description="true" data-display-extra-link="true" data-display-detail="true" data-order-by="name asc" style="    border-top-left-radius: 20px !important;     border-bottom-left-radius: 20px !important;"/>
                                <button type="submit" aria-label="Search" title="Search" class="btn oe_search_button search-button" style="background-color: #0098ED !important;">
                                  <i class="oi oi-search" style="color: #FBFBFB;"/>
                                </button>
                                <input name="order" type="hidden" class="o_search_order_by " value="name asc"/>
                            </div>
                          </form></div>
                      <div class="col-3" style="display: flex !important; margin-top: 2px;">
                            <span class="w-100">
                                  <t t-call="portal.placeholder_user_sign_in">
                                    <li t-nocache="Profile session and user group can change unrelated to parent caches." t-nocache-_item_class="_item_class" t-nocache-_link_class="_link_class" groups="base.group_public" t-attf-class="#{_item_class} o_no_autohide_item">
                                        <t t-set="_item_class" t-value="'nav-item'"/>
                                        <t t-set="_link_class" t-valuef="o_navlink_background_hover d-flex align-items-center h-100 rounded-0 border-0 o_border_contrast custom-signin-class"/>
                                    </li>
                                </t>
                                <t t-call="portal.user_dropdown">
                                    <t t-nocache="Each user is different regardless of the page visited." t-nocache-_avatar="_avatar" t-nocache-_icon="_icon" t-nocache-_icon_class="_icon_class" t-nocache-_user_name="_user_name" t-nocache-_user_name_class="_user_name_class" t-nocache-_item_class="_item_class" t-nocache-_link_class="_link_class" t-nocache-_dropdown_menu_class="_dropdown_menu_class">
                                        <t t-set="is_connected" t-value="not user_id._is_public()"/>
                                        <t t-set="_user_name" t-value="true"/>
                                        <t t-set="_user_name_class" t-valuef="medium"/>
                                        <t t-set="_item_class" t-value="'nav-item dropdown'"/>
                                        <t t-set="_link_class" t-value="'custom-nav-link'"/>
                                        <t t-set="_dropdown_menu_class" t-value="'dropdown-menu-end'"/>
                                        <t t-set="_icon" t-value="true"/>
                                        <t t-set="_icon_class" t-valuef="fa-stack"/></t>
                                </t>
                            </span>
                            <span class="w-100 pt0" style="text-align: end;">
                                <t t-call="website_sale_wishlist.header_wishlist_link">
                                  <t t-set="wishcount" t-value="len(request.env['product.wishlist'].current() or request.env['product.wishlist'])"/>
                                  <t t-set="show_wishes" t-value="true"/>
                                  <t t-set="_item_class" t-value="'nav-item me-lg-3'"/>
                                  <t t-set="_link_class" t-value="'nav-link'"/>
                                </t>
                            </span>
                            <span class="w-100 " style=" text-align:end;">
                               <t t-call="website_sale.header_cart_link">
                                  <t t-nocache="The number of products is dynamic, this rendering cannot be cached." t-nocache-_icon="_icon" t-nocache-_text="_text" t-nocache-_item_class="_item_class" t-nocache-_link_class="_link_class">
                                    <t t-set="website_sale_cart_quantity" t-value="request.session['website_sale_cart_quantity'] if 'website_sale_cart_quantity' in request.session else website.sale_get_order().cart_quantity or 0"/>
                                    <t t-set="show_cart" t-value="true"/>
                                    <t t-set="_text" t-value="false"/>
                                  </t>
                                </t>
                            </span>
                          </div>
                        </div>
                    <div class="col-9" style="margin-right: auto !important; margin-left: auto !important;">
                      <div class="row">
                          <t t-foreach="website.menu_id.child_id" t-as="submenu">
                            <t t-call="website.submenu">
                              <t t-set="show_dropdown" t-value="(submenu.is_mega_menu and submenu.is_visible) or submenu.child_id.filtered(lambda menu: menu.is_visible)"/>
                              <t t-set="item_class" t-valuef="nav-item"/>
                              <t t-set="link_class" t-valuef="nav-link"/>
                                <t t-set="dropdown_toggler_classes" t-valuef="d-flex justify-content-between align-items-center"/>
                                <t t-set="dropdown_menu_classes" t-valuef="position-relative rounded-0 o_dropdown_without_offset"/></t>
                            </t>
                              </div>
                          </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
    </xpath>
</data>
