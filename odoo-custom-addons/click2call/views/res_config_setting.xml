<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_click2call_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.click2call</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="60" />
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Click2call API URL" string="Click2call" data-key="click2call" >
                    <h2>Click2call</h2>
                    <div class="row mt16 o_settings_container" name="managa_mail_campaigns_setting_container">
                        <div class="col-lg-12 o_setting_box col-12">
                            <div class="o_setting_right_pane">
                                <label for="click2call_endpoint" />
                                <div>
                                    <field name="click2call_endpoint" placeholder="https://..."/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
