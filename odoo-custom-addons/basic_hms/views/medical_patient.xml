<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="patient_view_pivot" model="ir.ui.view">
            <field name="name">medical.patients.pivot.view</field>
            <field name="model">medical.patient</field>
            <field name="arch" type="xml">
                <pivot string="Patient">
                    <field name='patient_id'/>
                    <field name='name'/>
                    <field name='treatment'/>
                </pivot>
            </field>
        </record>
        <record id="medical_patient_view_kanban" model="ir.ui.view">
            <field name="name">medical.patient.view.kanban</field>
            <field name="model">medical.patient</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                </div>
                    <div class="oe_kanban_content">
                        <div>
                            <strong><field name="patient_id"/></strong>
                        </div>
                        <div >
                                <a>Treatment For :</a>
                                <strong><field name="treatment"/></strong>
                        </div>
                    </div>
                    <div class="oe_clear"></div>
                </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="medical_patients_form_view" model="ir.ui.view">
            <field name="name">medical.patients.form.view</field>
            <field name="model">medical.patient</field>
            <field name="arch" type="xml">
                <form string="Patient">
                    <header>
                        <button name="invoices_button" type="object" string="Invoice" class="oe_highlight"/>
                        
                    </header>
                    <sheet>
                        
                        <h2 style="text-align: center"> 
                            Registration Information
                        </h2>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="patient_id" />
                            </group>
                            <group>
                                <field name="date1"/>
                            </group>
                            <group>
                                <field name="date_of_birth" />
                                <field name="age"/>
                                <field name="sex"/>
                            </group>
                            <group>
                                <field name="contact_no"/>
                                <field name="address"/>
                                 
                            </group>
                            <group>
                                <field name="marital_status" />
                                <field name="height"/>
                                <field name="weight"/>
                                
                            </group>
                            <group>
                                
                                <field name="father_name"/>
                                <field name="father_occupation"/>
                            </group>
                            <group>
                                <field name="designation"/>
                                <field name="occupation"/>
                                
                            </group>
                            <group>
                                <field name="treatment"/>
                            </group>
                            <group>
                                
                                <field name="office_address"/>
                            </group>
                            <group>
                                <field name="early_treatment" />
                            </group>
                            <group>
                                <field name="duration_ailmenmts"/>
                            </group>
                            <group>
                                <field name="operations_details" />
                            </group>
                            <group>
                                <field name="duration_treatment" />
                            </group>
                            <group>
                                <field name='fees'/>
                            </group>
                            
                        </group>
                        <group><field name = 'data_value' widget="many2many_tags"/></group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="medical_patients_tree_view" model="ir.ui.view">
            <field name="name">medical.patients.tree.view</field>
            <field name="model">medical.patient</field>
            <field name="arch" type="xml">
                <tree string="Patient Information">
                    <field name="name" />
                    <field name="patient_id" />
                    <field name="sex" />
                    <field name="date_of_birth" />
                    <field name="primary_care_physician_id" />
                    <field name="deceased" />
                </tree>
            </field>
        </record>
        <record id="medical_patient_view_calendar" model="ir.ui.view">
            <field name="name">medical.patient.view.calendar</field>
            <field name="model">medical.patient</field>
            <field name="arch" type="xml">
                <calendar string="Patient" date_start="date_of_birth" color="">
                </calendar>
            </field>
        </record>
        <record id="medical_patient_view_graph" model="ir.ui.view">
            <field name="name">medical.patient.view.graph</field>
            <field name="model">medical.patient</field>
            <field name="arch" type="xml">
                <graph string="Patient" type="bar">
                    <field name="height" />
                    <field name="weight" />
                </graph>
            </field>
        </record>
        <record id="action_medical_patient" model="ir.actions.act_window">
            <field name="name">Patient Details</field>
            <field name="res_model">medical.patient</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,kanban,graph,pivot,calendar,activity</field>
        </record>
        <menuitem id="menu_medical_patient_code" action="action_medical_patient"
            string="Reception" parent="menu_patients" sequence="0" />
            
        <act_window id="action_view_priscription_id2" name="Prescription Orders"
            res_model="medical.prescription.order" src_model="medical.patient"
            view_mode="tree" domain="[('patient_id', '=', active_id)]" />

        <act_window id="action_view_lab_id" name="Lab Reports"
            res_model="medical.lab" src_model="medical.patient"
            view_mode="tree,form" domain="[('patient_id', '=', active_id)]" />

        <act_window id="action_psc_id" name="PSC"
            res_model="medical.patient.psc" src_model="medical.patient"
            view_mode="tree,form" domain="[('patient_id', '=', active_id)]" />
    </data>
</odoo>