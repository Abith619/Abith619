        <record id="scan_test_main" model="ir.ui.view">
            <field name="name">Scan Test</field>
            <field name="model">scan.test</field>
            <field name="priority" eval="8" />
                <field name="arch" type="xml">
                    <form string="Scan Test">
                        <header>
                        </header>
                        <sheet>
                <div class="oe_button_box" name="button_box">     
                                
            <button class="oe_stat_button" name="scan_button"  type="object" icon="fa-clipboard">
                <field name ="scan_recs" widget="statinfo" />
            </button>
                </div>
            <field name ="request" invisible='1'/>
        <field name ="name" invisible='1'/>
            <field name ="patient_id" invisible='1'/>
            <field name ="price" invisible='1'/>
            <field name ="range" invisible='1'/>
            <field name ="doctor" invisible='1'/>
            <field name ="company_id" invisible='1'/>
                <div class="row">
            <div class='col-3'>
        <label for="mri_test" class='labtestcls' string='1.5 M.R.I STUDY'/>
            <div class=''>
                <field name = 'mri_test' widget='many2many_checkboxes' />
            </div>
        <label for="doppler_test" class='labtestcls' string='DOPPLER STUDIES'/>
            <div class=''>
                <field name = 'doppler_test' widget='many2many_checkboxes'/>
            </div>
        
        
        </div>

            <div class="col-3">
        <label for="other_test" class='labtestcls' string='OTHER STUDIES'/>
            <div class=''>
                <field name = 'other_test' widget='many2many_checkboxes' />
            </div>
        <label for="ct_angiogram" class='labtestcls' string='C.T ANGIOGRAM'/>
            <div class=''>
                <field name = 'ct_angiogram' widget='many2many_checkboxes'/>
            </div>
        <label for="ultra_sound_test" class='labtestcls' string='ULTRASOUND STUDY'/>
            <div class=''>
                <field name = 'ultra_sound_test' widget='many2many_checkboxes' />
            </div>
        </div>

        <div class="col-3">
        <label for="robotic_clinical_test" class='labtestcls' string='FULLY ROBITIC CLINICAL LAB'/>
            <div class=''>
                <field name = 'robotic_clinical_test' widget='many2many_checkboxes' />
            </div>
        
        </div>
        <div class="col-3">
        <label for="ct_test" class='labtestcls' string='C.T STUDY'/>
            <div class=''>
                <field name = 'ct_test' widget='many2many_checkboxes'/>
            </div>
        <label for="ct_guided_intervention" class='labtestcls' string='C.T GUIDED INTERVENTION'/>
        <div class=''>
            <field name = 'ct_guided_intervention' widget='many2many_checkboxes'/>
        </div>
            </div>
        </div>
            </sheet>
            </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="scan_test_action">            
            <field name="name">Scan Test</field>         
                <field name="res_model">scan.test</field>           
                <!-- <field name="view_type">form</field>-->
                <field name="view_mode">tree,form</field>
                <field name="domain">[]</field>            
                <field name="help" type="html">                
                    <p class="oe_view_nocontent_create">Scan Test
                    </p>            
                </field>        
            </record>
            
            <menuitem id="menu_scan_test_main" name="Scans" parent="main_menu_hospital_management" sequence= "4" action="scan_test_action"/>
            <record id="scan_test_tree_view" model="ir.ui.view">
                <field name="name">scan.test.tree.view</field>
                <field name="model">scan.test</field>
                <field name="arch" type="xml">
                    <tree string="Lab Tests">
                        <field name ="request" />
                        <field name ="ebook_id" />
                        <field name ="patient_id" />
                        <field name="write_date"/>
                        <field name ="doctor" />
                        <!-- <field name ="company_id" invisible='1'/> -->
                    </tree>
                </field>
            </record>

            <record id="view_scan_land_filter" model="ir.ui.view">
                <field name="name">Scan Test</field>
                <field name="model">scan.test</field>
                <field name="type">search</field>
                <field name="arch" type="xml">
                    <search string="Lab Test">
                        <!-- <field name="request"/> -->
                        <field name="ebook_id"/>
                        <field name="patient_id"/>
                        <field name="write_date"/>
                    <!-- <filter string="Doctor" name="doctor" domain="[('doctor', '!=', '')]"/> -->
                        <filter string="Doctor" name="doctor" context="{'group_by': 'doctor'}"/>
                        <filter string="Branch" name="company_id" context="{'group_by': 'company_id'}"/>
                        <filter string="Today" name="write_date" separator="1" domain="[('write_date','=',(datetime.date.today().strftime('%Y-%m-%d')))]"/>
                        <filter string="Yesterday" name="write_date" separator="1" domain="[('write_date','=',(datetime.date.today()-relativedelta(days=1)).strftime('%Y-%m-%d'))]"/>
                        <filter string="Tomorrow" name="write_date" separator="1" domain="[('write_date','=',(datetime.date.today()+relativedelta(days=1)).strftime('%Y-%m-%d'))]"/>
                        
                        <filter string="Past 6 Month" name="write_date" separator="1" domain="[('write_date','&lt;=',(datetime.date.today()-relativedelta(months=6)).strftime('%Y-%m-%d'))]"/>
                        <!-- <filter string="Next Month" name="prescription_date" separator="1" domain="[('prescription_date','&gt;=',(datetime.date.today()+relativedelta(day=31)).strftime('%Y-%m-%d'))]"/> -->
                        <filter string="Past Month" name="write_date" separator="1" domain="[('write_date','&lt;=',(datetime.date.today()-relativedelta(months=1)).strftime('%Y-%m-%d'))]"/>
                        <!-- <filter string="Past week" name="prescription_date" separator="1" domain="[('prescription_date','&gt;=',(datetime.date.today()-relativedelta(week=1)).strftime('%Y-%m-%d'))]"/> -->
                        <!-- <filter string="This Month" name="prescription_date" separator="1" domain="[('prescription_date','&lt;=',(datetime.date.today()+relativedelta(months=1)).strftime('%Y-%m-%d'))]"/> -->
                    </search>
                </field>
            </record>
