<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <!-- Tree view -->
        <record id="medical_prescription_line_tree_view" model="ir.ui.view">
            <field name="name">medical.prescription.line.tree.view</field>
            <field name="model">medical.prescription.line</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="Prescription lines">
                    <field name="medicine_name" />
                    <field name="morning" />
                    <field name="noon" />
                    <field name="evening" />
                    <field name="night" />
                    <field name="before_after" />
                    <field name="comment" />
                    <field name="days1" />
                </tree>

            </field>
        </record>

        <record id="medical_prescription_line_form_view" model="ir.ui.view">
            <field name="name">medical.prescription.line.form.view</field>
            <field name="model">medical.prescription.line</field>
            <field name="arch" type="xml">
                <form string="Prescription">
                    <group colspan="4" col="4">
                        <field name="medicine_name" required="1" />
                        <field name="all_day"/>
                        <field name="quantity"/>
                        <field name="prescribed_quantity" />
                        <field name="comment" />
                        <field name="days1" />
                    </group>
                   
                </form>

            </field>
        </record>

</odoo>
