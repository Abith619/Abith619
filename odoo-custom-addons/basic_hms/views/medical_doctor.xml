                        </button>


                    <button class="oe_stat_button" name="scans_prescription" type="object" icon="fa-clipboard">
                            <field name ="sacns_tests" widget="statinfo"/>
                        </button>
                            

                    <button class="oe_stat_button"  name="document_button" type="object" icon="fa-clipboard">
