    <record model="ir.rule" id="see_his_own_patient">
        <field name="name">See only His patients</field>
        <field name="model_id" ref="model_medical_doctor"></field>
        <field name="domain_force">[('doctor.id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('group_doctor_doctor'))]"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="1"/>
        <field name="perm_read" eval="1"/>
    </record>
    
