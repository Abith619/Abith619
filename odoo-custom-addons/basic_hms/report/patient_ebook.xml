<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <template id="basic_hms.registration_patient_report">
            <t t-call="web.external_layout">
     <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
        <style>
             .flex-parent {
                display: flex;
            }
            #tab1{
                width:150% !important;
                padding:5px;
             } 
            #tab2{
                width:50% !important;
                padding:5px;
             } 
            .table-data {
                height: 200px !important;
            }
            #div {
                display: flex;
                align-items: flex-end;
              }
        </style>
            <t >
            <table border="0" class="table table-bordered" id='tab2' style="border: 0px;margin-top: 50px;">
                <td style="border: 0px;width: 50%;">
                    <p><b>Patient ID : </b><span t-field="o.name"/></p>
                    <p><b>Registration Date : </b><span t-field="o.dates"/></p>
                </td>
                <div style="border: 0px;width: 50%;" id='div'>
                    <img t-att-src="'data:image/png;base64,%s' % to_text(o.qr_code)" style="height:100px;width:100px;float:center;"/>
                </div>
            </table>

            <table  class="table-data" id='tab1' style="border: 1px solid black;">
            <thead>
            <tr>
            <td style="border: 1px solid black;" >
                <p><b>Name : </b> <span t-field="o.patient_id"/></p>
                <p><b>Gender : </b> <span t-field="o.sex"/></p>
                <!-- <p><b>Martial Status : </b> <span t-field="o.marital_status"/></p> -->
                <!-- <p><b>DOB : </b> <span t-field="o.date_of_birth"/></p> -->
                <p><b>Age : </b> <span t-field="o.age"/></p>
                <p><b> Contact Number : </b> <span t-field="o.contact_no"/></p>
                <p><b> Whatsapp Number : </b> <span t-field="o.contact_number"/></p>
                <!-- <p><b>Height : </b> <span t-field="o.height"/></p>
                <p><b>Weight : </b> <span t-field="o.weight"/></p>
                <p><b>BMI : </b> <span t-field="o.bmi_value"/></p>
                <p><b>Doctor Allocation: </b> <span t-field="o.doctors"/></p>
                <p><b> Appointment Time : </b> <span t-field="o.appointment_from"/></p> -->
            </td>
            <td style="border: 1px solid black;">
                <p><b> Address : </b> <span t-field="o.address"/></p>
                <p><b> State : </b> <span t-field="o.state"/></p>
                <p><b> Country : </b> <span t-field="o.country"/></p>
                <!-- <p><b> Occupation : </b> <span t-field="o.occupation"/></p>
                <p><b> Experience : </b> <span t-field="o.designation"/></p>
                <p><b> Father / Husband Name : </b> <span t-field="o.name_father"/></p>
                <p><b> Father's Occupation : </b> <span t-field="o.father_occupation"/></p> -->
            </td>
            </tr>
            </thead>
            </table>
          
            <!-- <div style="border: 0px;width: 100%; ">
                <p style="text-align: right;"><strong>Fees :  </strong><i class="fa fa-inr"/><span t-field="o.fees"/></p>
                <p style="text-align: left;"><strong>Feedback :  </strong><span t-field="o.data_value"/></p>
            </div> -->
            </t>
            </t>
            </t>
            </t>
        </template>
    
    </data>
    

</odoo>
