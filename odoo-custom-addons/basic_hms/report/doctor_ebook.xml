<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<template id="basic_hms.ebook_doctor_report">
     <t t-call="web.external_layout">
     <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t >
            <table border="0" class="table table-sm table-bordered" style="border: 0px;margin-top: 50px;">
            <td style="border: 0px;width: 50%;">
                <p><strong>Name :</strong><span t-field="o.patient"/></p>
            </td>
            <td style="border: 0px;width: 50%;">
                <p><b>ID Number :</b> <span t-field="o.serial_number"/></p>
            </td>
            </table>
            <table border="4" class="table table-bordered" style="border: 1px solid black;">
            <thead>
            <tr style="height:40px">
            <td style="border: 1px solid black;" >
                <p><b>Gender :</b> <span t-field="o.sex"/></p>
                <p><b>Martial Status :</b> <span t-field="o.marital_status"/></p>
                <p><b>Age :</b> <span t-field="o.age"/></p>
                <p><b>Height :</b> <span t-field="o.height"/></p>
                <p><b>Weight :</b> <span t-field="o.weight"/></p>
                <p><b>BP :</b> <span t-field="o.bp"/></p>
                <p><b>BMI :</b> <span t-field="o.bmi_value"/></p>
                <p><b>Branch :</b> <span t-field="o.company_id"/></p>
                <!-- <p><b> Symptoms :</b> <span t-field="o.sign_symptoms"/></p> -->
            </td>
            <td style="border: 1px solid black;">
                <p><b> Doctor :</b> <span t-field="o.doctor"/></p>
                <p><b> Contact Number :</b> <span t-field="o.phone_number"/></p>
                <p><b> Whatsapp Number :</b> <span t-field="o.contact_number"/></p>
                <p><b> Address :</b> <span t-field="o.address"/></p>
                <p><b> Father / Husband Name :</b> <span t-field="o.name_father"/></p>
                <p><b> Occupation :</b> <span t-field="o.occupation"/></p>
                <p><b> Habits :</b> <span t-field="o.patient_habits"/></p>
            </td>
            </tr>
            </thead>
            </table>
            <table class="table table-bordered" style="border: 1px solid black;">
							<thead>
                                <tr>
                                <th style="border: 1px solid black;">Complaints</th>
                                <th style="border: 1px solid black;"> Duration </th>
                                <th style="border: 1px solid black;"> Signs / Symptoms </th>
                                </tr>
                            </thead>
                            <tbody>
                                 <tr t-foreach='docs.currents_ailments' t-as='line'>
                               <td style="border: 1px solid black;">
                               <span t-field="line.patient_currents_ailments"/>
                               </td>
                               <td style="border: 1px solid black;">
                               <span t-field="line.duration"/>
                               </td>
                               <td style="border: 1px solid black;">
                               <span t-field="line.patient_signs_symptoms"/>
                               </td>
                                </tr>
                            </tbody>
                            </table>

                            <table class="table table-bordered" style="border: 1px solid black;">
							<thead>
                                <tr>
                                <th style="border: 1px solid black;">Past Complaints</th>
                                <th style="border: 1px solid black;">Notes</th>
                                </tr>
                            </thead>
                            <tbody>
                                 <tr t-foreach='docs.pervious_medication' t-as='line'>
                               <td style="border: 1px solid black;">
                               <span t-field="line.diseases_for"/>
                               </td>
                               <td style="border: 1px solid black;">
                                <span t-field="line.medicine"/>
                                </td>
                                </tr>
                            </tbody>
                            </table>
                               
                               <table class="table table-bordered" style="border: 1px solid black;">
							<thead>
                                <tr>
                                <th style="border: 1px solid black;">Lab Test ID</th>
                                <th style="border: 1px solid black;">Test Name </th>
                                <th style="border: 1px solid black;">Tested Range </th>
                                <th style="border: 1px solid black;">Normal Range </th>
                                <th style="border: 1px solid black;">Date </th>
                                </tr>
                            </thead>
                            <tbody>
                                 <tr t-foreach='docs.lab_test_line' t-as='line'>
                               <td style="border: 1px solid black;">
                               <span t-field="line.lab_type"/>
                               </td>
                               <td style="border: 1px solid black;">
                                <span t-field="line.name"/>
                                </td>
                                <td style="border: 1px solid black;">
                                <span t-field="line.range_test"/>
                                </td>
                                <td style="border: 1px solid black;">
                                <span t-field="line.range_normal"/>
                                </td>
                                <td style="border: 1px solid black;">
                                    <span t-field="line.date"/>
                                    </td>
                                </tr>
                            </tbody>
                            </table>

                            <table class="table table-bordered" style="border: 1px solid black;">
                                <thead>
                                    <tr>
                                    <th style="border: 1px solid black;">Scan Test ID</th>
                                    <th style="border: 1px solid black;">Test Name </th>
                                    <th style="border: 1px solid black;">Tested Range </th>
                                    <th style="border: 1px solid black;">Normal Range </th>
                                    <th style="border: 1px solid black;">Date </th>
                                    </tr>
                                </thead>
                                <tbody>
                                     <tr t-foreach='docs.scan_test' t-as='line'>
                                   <td style="border: 1px solid black;">
                                   <span t-field="line.scan_id"/>
                                   </td>
                                   <td style="border: 1px solid black;">
                                    <span t-field="line.name"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                <span t-field="line.range_test"/>
                                </td>
                                <td style="border: 1px solid black;">
                                <span t-field="line.range_normal"/>
                                </td>
                                    <td style="border: 1px solid black;">
                                        <span t-field="line.date"/>
                                        </td>
                                    </tr>
                                </tbody>
                                </table>

                            <table class="table table-bordered" style="border: 1px solid black;">
                                <thead>
                                    <tr>
                                        <th style="border: 1px solid black;">Medicine Name</th>
                                        <th style="border: 1px solid black;">Unit</th>
                                        <th style="border: 1px solid black;">Dose</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach='docs.medicine_id.prescription_line_ids' t-as='line'>
                                       <td style="border: 1px solid black;">
                                       <span t-field="line.medicine_name"/>
                                       </td>
                                       <td style="border: 1px solid black;">
                                       <span t-field="line.units"/>
                                       </td>
                                       <td style="border: 1px solid black;">
                                       <span t-field="line.all_day"/>
                                       </td>    
                                    </tr>
                                </tbody>
                                </table>
                                <table class="table table-bordered" style="border: 1px solid black;">
                                    <thead>
                                        <tr>
                                        <th style="border: 1px solid black;">Diets</th>
                                        <!-- <th style="border: 1px solid black;">Duration Followed (Days/Months)</th> -->
                                        </tr>
                                    </thead>
                                    <tbody>
                                         <tr t-foreach='docs.diet_fields' t-as='line'>
                                       <td style="border: 1px solid black;">
                                       <span t-field="line.diet_for"/>
                                       </td>
                                       <!-- <td style="border: 1px solid black;">
                                        <span t-field="line.followed_duration"/>
                                        </td> -->
                                        </tr>
                                    </tbody>
                                    </table>
                            <!-- <table class="table table-bordered" style="border: 1px solid black;">
							<thead>
                                <tr>
                                <th style="border: 1px solid black;">Past History</th>
                                <th style="border: 1px solid black;">Sign History</th>
                                <th style="border: 1px solid black;">Medicine History</th>
                                <th style="border: 1px solid black;">Diet History</th>
                                </tr>
                            </thead>
                            <tbody>
                                 <tr t-foreach='docs.pervious_medication' t-as='line'>
                               <td style="border: 1px solid black;">
                               <span t-field="line.diseases"/>
                               </td>
                               <td style="border: 1px solid black;">
                               <span t-field="line.signs"/>
                               </td>
                               <td style="border: 1px solid black;">
                               <span t-field="line.medicine"/>
                               </td>
                               <td style="border: 1px solid black;">
                               <span t-field="line.diets"/>
                               </td>
                                </tr>
                            </tbody>
                            </table>
                            <table class="table table-bordered" style="border: 1px solid black;">
							<thead>
                                <tr>
                                <th style="border: 1px solid black;">Surgery History</th>
                                </tr>
                            </thead>
                            
                            </table>     

                            <table class="table table-bordered" style="border: 1px solid black;">
							<thead>
                                <tr>
                                <th style="border: 1px solid black;">Family History</th>
                                </tr>
                            </thead>
                            <tbody>
                                 <tr t-foreach='docs.history_family' t-as='line'>
                               <td style="border: 1px solid black;">
                               <span t-field="line.family_details"/>
                               </td>
                                </tr>
                            </tbody>
                            </table>                             -->
            </t>
            </t>
        </t>
    </t>
</template>
</odoo>