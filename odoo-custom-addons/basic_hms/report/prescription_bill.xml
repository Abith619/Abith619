<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<data>
    <record id="paperformat_prescription" model="report.paperformat">
        <field name="name">Custom Paper</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">170</field>
        <field name="page_width">260</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">15</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
    </record>

    <template id="web_layout" inherit_id="web.layout">
        <xpath expr="//title" position="replace">Abith</xpath>
     </template>
     
    <template id="basic_hms.prescription_bils_report" name="Diet Plan">
        <t t-call="web.external_layout">
            <t t-call="web.html_container">
               <t t-foreach="docs" t-as="o">

            <style>
                .flex-parent {
                    display: flex;

                  }
                .flex-container {
                    display: flex;
                    
                  }
                  

            </style>
                   <t >
                    <td style="border: 0px;width: 50%;">
                        <div class="header_tag">
                            <h4 class="text-center heading_text_cor"><strong>Medicine Bill </strong></h4>
                            </div>
                        <div  >
                            <div class='float-left'>
                                <p><strong>SL NO :</strong><span t-field="o.ebook_id"/></p> 
                                <p><strong>Bill Date :</strong><span t-field="o.date_date"/></p>
                                <p><strong>Patient Name :</strong><span t-field="o.patient_name"/></p></div>
                            <div class="float-right" >
                                <p><strong>Gender :</strong><span t-field="o.sex"/></p>
                                <p><strong>Contact Number :</strong><span t-field="o.contact_no"/></p>
                                <p><strong>Payment Type :</strong><span t-field="o.payment_type"/></p>
                    </div>
            </div>
                    </td>
                    

                   <table class="table table-bordered" style="border: 1px solid black;">
                    <thead>
                        <tr>
                        
                        <th style="border: 1px solid black;"> Prescription ID  </th>
                        <th style="border: 1px solid black;"> Particulars  </th>
                        <th style="border: 1px solid black;"> GST %</th>
                        <th style="border: 1px solid black;"> Rate </th>
                        </tr>
                    </thead>
                    <tbody>
                     <tr t-foreach='docs.pres_bill' t-as='lines'>
                       <td style="border: 1px solid black;">
                        <span t-field="lines.prescription_id"/>
                        </td>
                        <td style="border: 1px solid black;">
                        <span t-field="lines.medicine_name"/>
                        </td>
                        <td style="border: 1px solid black;">
                            <span t-field="lines.gst_tax"/>
                          </td>
                        <td style="border: 1px solid black;">
                         <span t-field="lines.pre_amount"/>
                       </td>
                       </tr>
                    </tbody>
                    </table>
                    </t>
                  
                    <div class = "flex-parent">
                        <th>
                        <table class="table table-sm" id="box" style="width:36.5%; float:right;margin-left: 0px; border: 1px solid black;">
                            <tr class="border-black o_subtotal" style="font-size: 15px; ">
                                <td><strong>Medicine Amount</strong></td>
                                <td class="text-right">
                            <strong><span t-field="o.total12" class="fa fa-inr"/></strong>
                                </td>
                            </tr>
                            <tr class="border-black o_subtotal" style="font-size: 15px; ">
                            <t>
                                <td><strong>GST 5%</strong></td>
                                    <td class="text-right">
                                    <strong><span t-esc="o.total_tax_med" class="fa fa-inr"/></strong>
                                    </td>
                                </t>
                            </tr>
                            <tr class="border-black o_subtotal" style="font-size: 15px;">
                            <td style="background-color:white;color:#black;font-size: 15px;"><strong>Total</strong></td>
                                <td style="background-color:white;color:#black;font-size: 15px;" class="text-right">
                                    <b><strong><span t-field="o.total_med_tax" class="fa fa-inr"/></strong></b>
                                </td>
                            </tr>
                        </table>
                        </th>
                        <br></br>
                        <t t-if="o.med_amt_paid">
                        <strong>Amount Paid :</strong>
                        <span t-field="o.med_amt_paid"/></t>
                        <br></br><br></br>
                        <t t-if="o.med_amt_due">
                        <strong>Amount Due :</strong>
                        <span t-field="o.med_amt_due"/></t>
                    </div>	
                   <br></br>
                     <div class='row'>
                        <div class='col-9'> 
                            <br></br>  
                            <h5><strong>Terms and Condition</strong></h5>
                            <h6>1.Subject to Tirupur jurisdiction</h6>
                            <h6>2.Medicines once purchased are not Refundable</h6>  
                        </div> 
                        <div class='col-3'>
                            <h6><strong>DAISY HOSPITAL</strong></h6>
                            <br></br><br></br>
                            <h6 style="text-align: center;"><strong> Authorised Signatory </strong></h6>
                        </div>
                </div>
            </t>
        </t>
    </t>
        </template>
 </data>
</odoo>
               
            
