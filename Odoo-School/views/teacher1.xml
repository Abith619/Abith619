<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <record id="view_teacher_form" model="ir.ui.view">
            
            <field name="name">teacher.teacher.form</field>
            
            <field name="model">teacher.teacher</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
        
                <form string="Teacher">
                    <header>
                        <button name='show_ru_assignments_sub_view' type='object' string= 'Create Student' class='oe_heighlght'/>
                    </header>
                    <sheet>
                       <group>

                       
                        <field name="names" />
                        <field name="teacher_ages" />
                        
                    </group>
                          <notebook>
                            
                <page string="Student List" >
                    
                    <field name="techerline">
                       
                        <tree string="Student List" editable="bottom" >
                            <field name="student" />
                            <field name="dob" />
                            <field name="age" />
                            <field name="gender" />
                        </tree>

                    </field>
                </page>
            </notebook>
                    </sheet>
                    
                </form>
                
            </field>
            
        </record>
        <record model="ir.actions.act_window" id="action_view_steachers">
            <field name="name">Teacher</field>
            <field name="res_model">teacher.student</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new teacher
                </p>
            </field>
        </record>
        <!-- <menuitem id="menu_school" name="student"/> -->
        <menuitem id="school_teacher" name="Teacher" parent="menu_school"
                  action="action_view_steachers" sequence='17'/>
        <menuitem id="demo_menu" name="demo" sequence="15" parent='school_teacher' action='action_view_steachers'/>
    </data>
</odoo>
